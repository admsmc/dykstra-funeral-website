{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "src/app/**/*.tsx",
        "src/middleware.ts",
        "next.config.ts"
      ],
      "project": [
        "src/**/*.{ts,tsx}"
      ],
      "ignore": [
        "src/**/*.test.{ts,tsx}",
        "src/**/*.spec.{ts,tsx}"
      ]
    },
    "packages/*": {
      "entry": [
        "src/index.ts"
      ],
      "project": [
        "src/**/*.ts"
      ]
    }
  },
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/dist/**",
    "**/.next/**"
  ],
  "ignoreDependencies": [
    "@types/*",
    "prisma",
    "tsx"
  ]
}
