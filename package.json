{
  "name": "dykstra-funeral-website",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "turbo run build",
    "build:analyze": "ANALYZE=true next build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "pnpm test:frontend && pnpm test:backend",
    "test:frontend": "vitest run",
    "test:frontend:ui": "vitest --ui",
    "test:frontend:coverage": "vitest --coverage",
    "test:frontend:watch": "vitest --watch",
    "test:backend": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:report": "playwright show-report",
    "test:e2e:snapshots": "playwright test --update-snapshots",
    "test:e2e:staff": "playwright test staff-dashboard.spec.ts staff-erp-features.spec.ts",
    "test:e2e:public": "playwright test public-routes.spec.ts accessibility.spec.ts visual-regression.spec.ts",
    "seed:e2e": "npx tsx scripts/seed-e2e-data.ts",
    "seed:e2e:clean": "npx tsx scripts/seed-e2e-data.ts --clean",
    "docs:e2e": "npx tsx scripts/generate-test-docs.ts",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "validate": "./scripts/pre-commit.sh",
    "validate:di": "npx tsx scripts/validate-di.ts",
    "validate:prisma-types": "npx tsx scripts/validate-prisma-types.ts",
    "validate:contracts": "npx tsx scripts/validate-backend-contracts.ts",
    "validate:contracts:openapi": "npx tsx scripts/validate-backend-contracts-openapi.ts",
    "validate:breaking-changes": "npx tsx scripts/detect-breaking-changes.ts",
    "check:circular": "madge --circular --extensions ts,tsx packages/infrastructure/src packages/application/src packages/api/src",
    "check:layers": "grep -r 'await import' packages/infrastructure/src packages/application/src | grep 'Layer.succeed\\|Layer.effect' || echo 'No await import in Layers found'",
    "check:prisma": "cd packages/infrastructure && prisma format --check",
    "check:types": "pnpm -r type-check",
    "check:unused": "knip --no-exit-code",
    "check:env": "node scripts/check-env.js",
    "generate:go-types": "openapi-typescript http://localhost:8080/api/docs/openapi.yaml -o src/generated/go-api.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@clerk/nextjs": "^6.35.5",
    "@dykstra/api": "workspace:^",
    "@dykstra/application": "workspace:^",
    "@dykstra/domain": "workspace:^",
    "@dykstra/infrastructure": "workspace:^",
    "@dykstra/shared": "workspace:^",
    "@dykstra/ui": "workspace:^",
    "@effect/schema": "^0.75.5",
    "@grapesjs/react": "^2.0.0",
    "@hookform/resolvers": "^5.2.2",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^7.0.1",
    "@react-pdf/renderer": "^4.3.1",
    "@sendgrid/mail": "^8.1.6",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.5.3",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-table": "8.20.5",
    "@trpc/client": "^11.7.2",
    "@trpc/react-query": "^11.7.2",
    "@trpc/server": "^11.0.0",
    "browser-image-compression": "^2.0.2",
    "cheerio": "^1.1.2",
    "cmdk": "^1.1.1",
    "framer-motion": "^11.0.8",
    "generic-pool": "^3.9.0",
    "googleapis": "^166.0.0",
    "grapesjs": "^0.22.14",
    "grapesjs-blocks-basic": "^1.0.2",
    "handlebars": "^4.7.8",
    "jose": "^6.1.2",
    "lucide-react": "^0.554.0",
    "next": "16.0.4",
    "pg": "^8.16.3",
    "puppeteer": "^24.31.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.1",
    "reactflow": "^11.11.4",
    "sonner": "^2.0.7",
    "stripe": "^20.0.0",
    "superjson": "^2.2.2",
    "twilio": "^5.10.6",
    "zod": "^3.24.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@clerk/testing": "^1.13.20",
    "@effect/eslint-plugin": "^0.3.2",
    "@next/bundle-analyzer": "^16.0.7",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trpc/next": "^11.7.2",
    "@types/node": "^20",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.4",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^20.0.11",
    "knip": "^5.70.2",
    "madge": "^8.0.0",
    "msw": "^2.12.3",
    "openapi-fetch": "^0.15.0",
    "openapi-typescript": "^7.10.1",
    "pdfkit": "^0.17.2",
    "playwright": "^1.57.0",
    "prettier": "^3.2.5",
    "prisma": "^7.0.1",
    "tailwindcss": "^4",
    "ts-prune": "^0.10.3",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5",
    "vitest": "^2.1.8",
    "zod-prisma-types": "^3.3.10"
  },
  "packageManager": "pnpm@9.15.0"
}
